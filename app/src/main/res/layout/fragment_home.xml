<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.HomePage.HomeFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_margin="24dp"
        android:layout_marginTop="45dp"
        android:fontFamily="Montserrat"
        android:text="Suggested for You"
        android:textColor="@color/black"
        android:textFontWeight="600"
        android:textSize="18dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="-40dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/firstTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:fontFamily="Montserrat"
            android:text="#Round Shape"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/secondTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:fontFamily="Montserrat"
            android:text="#25 years"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:layout_weight="2" />

        <TextView
            android:id="@+id/thirdTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:fontFamily="Montserrat"
            android:text="#M Size"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:layout_weight="3" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/news_results_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="-24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</LinearLayout>