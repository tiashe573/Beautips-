<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity2">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/black"
        android:background="@color/white">
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_pic"
            android:layout_width="286dp"
            android:layout_height="393dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="50dp"
            android:src="@drawable/cat"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="24dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:fontFamily="Montserrat"
            android:text="Top"
            android:textColor="@color/black"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_top_name"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:textSize="14dp"
            android:fontFamily="Montserrat"
            android:text="Urban Outfit"
            android:textColor="@color/black"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/item_top_size"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_weight="2"
            android:fontFamily="Montserrat"
            android:text="Size M"
            android:textColor="@color/black"
            android:gravity="right"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="24dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/item_top_price"
            android:layout_height="17dp"
            android:fontFamily="Montserrat"
            android:text="$24"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/item_top_url"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:fontFamily="Montserrat"
            android:text="YesStyle.Com"
            android:textColor="#2D9CDB"
            android:textSize="14dp"
            android:gravity="right"
            android:layout_weight="2" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="-1dp"
        android:background="@color/light_gray" />
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:fontFamily="Montserrat"
            android:text="Bottom"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="24dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_bottom_name"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:fontFamily="Montserrat"
            android:text="Lululemon"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/item_bottom_size"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:fontFamily="Montserrat"
            android:text="Size M"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:gravity="right"
            android:layout_weight="2" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/item_bottom_price"
            android:layout_height="17dp"
            android:fontFamily="Montserrat"
            android:text="$34"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/item_bottom_url"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:fontFamily="Montserrat"
            android:text="shop.lululemon.com"
            android:textColor="#2D9CDB"
            android:textSize="14dp"
            android:gravity="right"
            android:layout_weight="2" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="-1dp"
        android:background="@color/light_gray" />

</LinearLayout>