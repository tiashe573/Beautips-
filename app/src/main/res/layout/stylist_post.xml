<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="245dp"
    android:layout_marginLeft="8dp"
    android:layout_marginBottom="5dp">>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_post"
        android:layout_width="176dp"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="10dp"

        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/postPic"
            android:layout_width="178dp"
            android:layout_height="235dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cat"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient" />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:elevation="15dp"
        android:id="@+id/stylist_profile_image"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginTop="185dp"
        android:layout_marginEnd="139dp"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:src="@drawable/myimage"
        app:layout_constraintBottom_toBottomOf="@+id/card_view_post"
        app:layout_constraintEnd_toEndOf="@+id/card_view_post"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/card_view_post"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/stylist_name_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="100dp"
        android:elevation="14dp"
        android:fontFamily="@font/montserrat"
        android:text="Abby"
        android:textColor="#FFFFFF"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/card_view_post"
        app:layout_constraintEnd_toEndOf="@+id/card_view_post"
        app:layout_constraintStart_toStartOf="@+id/card_view_post"
        app:layout_constraintTop_toTopOf="@+id/card_view_post"

        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/thumb"
        android:elevation="14dp"
        android:layout_width="34dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="195dp"
        android:src="@drawable/thumbs"
        app:layout_constraintBottom_toBottomOf="@+id/card_view_post"
        app:layout_constraintEnd_toEndOf="@+id/card_view_post"
        app:layout_constraintHorizontal_bias="0.256"
        app:layout_constraintStart_toStartOf="@+id/card_view_post"
        app:layout_constraintTop_toTopOf="@+id/card_view_post"
        android:layout_marginStart="120dp"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="10dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/num_thums"
        android:elevation="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/montserrat"
        android:text="2k"
        android:textColor="#FFFFFF"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/card_view_post"
        app:layout_constraintEnd_toEndOf="@+id/card_view_post"
        app:layout_constraintHorizontal_bias="0.256"
        app:layout_constraintStart_toStartOf="@+id/card_view_post"
        app:layout_constraintTop_toTopOf="@+id/card_view_post"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        tools:ignore="MissingConstraints" />










</androidx.constraintlayout.widget.ConstraintLayout>